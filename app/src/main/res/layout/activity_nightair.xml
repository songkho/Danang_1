<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".nightair">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/libtn1"
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:autoLink="web|email|phone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/usimbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7e000000"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"

                            android:src="@drawable/usim"

                            android:textSize="0sp" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:text="유심"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="USIM 칩 구매"
                        android:textColor="@android:color/white"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/adtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/name"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:text="절약\n꿀팁!"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/libtn2"
                android:layout_width="match_parent"

                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:autoLink="web|email|phone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/moneybtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7e000000"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"

                            android:src="@drawable/money"

                            android:textSize="0sp" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon"
                            android:layout_weight="1"
                            android:paddingTop="5dp"


                            android:text="환전"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"

                        android:text="공항 베트남 돈 환전"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/adtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/name"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:text="절약\n꿀팁!"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/libtn3"
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:autoLink="web|email|phone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/gohotel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7e000000"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"

                            android:src="@drawable/taxi"

                            android:textSize="0sp" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon"
                            android:layout_weight="1"
                            android:paddingTop="5dp"


                            android:text="택시"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"

                        android:text="합당한 금액으로 택시타기\n
        (공항 → 호텔)"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/adtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/name"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:text="절약\n꿀팁!"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/libtn4"
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:autoLink="web|email|phone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/goairbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7e000000"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"

                            android:src="@drawable/airplane"

                            android:textSize="0sp" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:text="귀국"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignLeft="@+id/name"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="귀국 비행기 실수 하지 않고 \n생존하기"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/adtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/name"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:text="절약\n꿀팁!"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/libtn5"
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:autoLink="web|email|phone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/googlefood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7e000000"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"

                            android:src="@drawable/food"
                            android:textSize="0sp" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon"
                            android:layout_weight="1"
                            android:paddingTop="5dp"


                            android:text="맛집"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"

                        android:text="구글 맛집 리뷰 믿을 수 있을까?\n리뷰 보고간 솔직 후기"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/name"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:text="리뷰\n꿀팁!"
                        android:textColor="@android:color/white" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/libtn6"
                android:layout_width="match_parent"

                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:autoLink="web|email|phone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/plug"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7e000000"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"

                            android:src="@drawable/plug"

                            android:textSize="0sp" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/icon"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:text="전기"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="전기 110V ? 220V ?"
                        android:textColor="@android:color/white"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/adtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/name"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:text="절약\n꿀팁!"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2821664824480291/2184494920"></com.google.android.gms.ads.AdView>


</RelativeLayout>